<!DOCTYPE html>
<html>
  <head>
    <title>BootcampApp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="header">
      <h1><%= link_to "Bootcamp App", root_path %></h1>
    </div>

    <% if logged_in? %>
      <div class="navigation">
        <h3>メニュー</h3>
        <ul>
          <li>
            <h4>ユーザー</h4>
            <ul class="nested">
              <li><%= link_to "ユーザー一覧", users_path %></li>
              <li><%= link_to "新ユーザー", new_user_path %></li>
            </ul>
          </li>
          <li><%= link_to "ログ説明", log_path %></li>
          <li><%= link_to "生成されるSQL", sql_path %></li>
          <li><%= link_to "ログアウト", logout_path, method: :delete, data: { confirm: "ログアウトして宜しいですか?" }  %></li>
        </ul>
      </div>
    <% end %>
    
    <div class="content-area">
      <p id="notice"><%= notice %></p>
      <p id="alert"><%= alert %></p>
      <%= yield %>
    </div>
  </body>
</html>

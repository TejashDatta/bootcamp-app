<div class="paginator">
  <%= link_to_if current_page > 1, "最初", send(path) %>
  <%= link_to_if current_page > 1,  "前", send(path, page: current_page - 1) %>
  <% (1..@last_page).each do |page| %>
    <%= link_to_if current_page != page, page, send(path, page: page) %>
  <% end %>
  <%= link_to_if current_page < @last_page, "次", send(path, page: current_page + 1) %>
  <%= link_to_if current_page < @last_page, "最後", send(path, page: @last_page) %>
</div>

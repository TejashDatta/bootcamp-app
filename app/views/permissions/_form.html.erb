<%= form_with(model: permission, url: user_permissions_path, local: true) do |form| %>
  <% if permission.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(permission.errors.count, "error") %> エラーがあって保存が失敗しました。</h2>

      <ul>
        <% permission.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :action %>
    <%= form.select :action,
      {
        "Users Controller" => %w[users#new users#create],
        "Permissions Controller" => %w[permissions#new permissions#create]
      }
    %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>

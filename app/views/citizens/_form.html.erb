<%= form_with(model: citizen, url: url, local: true) do |form| %>
  <% if citizen.errors.any? %>
    <div id="error_explanation">
      <h2><%= t("errors_caused_save_failure", error_count: citizen.errors.count) %></h2>
    </div>
  <% end %>

  <%= render "form_item", attribute: :name, form: form, errors: citizen.errors %>
  <%= render "form_item", attribute: :city, form: form, errors: citizen.errors %>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>

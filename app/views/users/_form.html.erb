<%= form_with(model: user, local: true) do |form| %>
  <% if user.errors.any? %>
    <div id="error_explanation">
      <h2><%= user.errors.count %> エラーがあって保存が失敗しました。</h2>
    </div>
  <% end %>

  <%= render "form_item", field_type: :text_field, attribute: :name, form: form, errors: user.errors %>
  <%= render "form_item", field_type: :text_field, attribute: :email, form: form, errors: user.errors %>
  <%= render "form_item", field_type: :password_field, attribute: :password, form: form, errors: user.errors %>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>

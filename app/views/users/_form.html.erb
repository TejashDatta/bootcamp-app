<%= form_with(model: user, local: true) do |form| %>
  <% if user.errors.any? %>
    <div id="error_explanation">
      <h2><%= user.errors.count %> エラーがあって保存が失敗しました。</h2>
    </div>
  <% end %>

  <div class="field">
    <%= render "form_label_and_errors", attribute: :name, form: form, errors: user.errors %>
    <%= form.text_field :name %>
  </div>

  <div class="field">
    <%= render "form_label_and_errors", attribute: :email, form: form, errors: user.errors %>
    <%= form.text_field :email %>
  </div>

  <div class="field">
    <%= render "form_label_and_errors", attribute: :password, form: form, errors: user.errors %>
    <%= form.text_field :password %>
  </div>

  <div class="field">
    <%= render "form_label_and_errors", attribute: :role, form: form, errors: user.errors %>
    <%= form.select :role, %w[general manager admin] %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>

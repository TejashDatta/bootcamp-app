<h1>旅行者</h1>

<table>
  <thead>
    <tr>
      <th>名前</th>
      <th>出発国</th>
      <th>到着国</th>
      <th colspan="3"></th>
      <th colspan="2">パスポート</th>
    </tr>
  </thead>

  <tbody>
    <% @travelers.each do |traveler| %>
      <tr>
        <td><%= traveler.name %></td>
        <td><%= traveler.departure_country %></td>
        <td><%= traveler.arrival_country %></td>
        <td><%= link_to "表示", traveler %></td>
        <td><%= link_to "編集", edit_traveler_path(traveler) %></td>
        <td><%= link_to "削除", traveler, method: :delete, data: { confirm: "削除は宜しいですか?" } %></td>
        <td>
          <% if traveler.passport %>
            <%= link_to "表示", traveler_passport_path(traveler.id)  %>
            <%= link_to "削除", traveler_passport_path(traveler.id), method: :delete, data: { confirm: "削除は宜しいですか?" } %>
          <% else %>
            <%= link_to "作成", new_traveler_passport_path(traveler.id) %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


<%= form_with(model: message_search_form, url: search_messages_path, method: "get", local: true, class: "clearable-form") do |form| %>
  <div class="field">
    <%= form.label :sender_email %>
    <%= form.text_field :sender_email %>
  </div>
  <div class="field">
    <%= form.label :receiver_email %>
    <%= form.text_field :receiver_email %>
  </div>
  <div class="field">
    <%= form.label :subject %>
    <%= form.text_field :subject %>
  </div>
    <div class="field">
    <%= form.label :content %>
    <%= form.text_field :content %>
  </div>
  <div class="actions">
    <%= form.submit "検索", name: nil %>
    <button class="clear-form">リセット</button>
  </div>
<% end %>

<h1><%= @investor.account_number %>の株式投資</h1>
<p>
  <%= link_to t("create_model", model: StockInvestment.model_name.human), new_investor_stock_investment_path %>
</p>

<table>
  <thead>
    <tr>
      <th><%= StockInvestment.human_attribute_name(:stock_name) %></th>
      <th><%= StockInvestment.human_attribute_name(:shares_owned) %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @stock_investments.each do |stock_investment| %>
      <tr>
        <td><%= stock_investment.stock_name %></td>
        <td><%= stock_investment.shares_owned %></td>
        <td><%= link_to t("show"), investor_stock_investment_path(@investor, stock_investment) %></td>
        <td><%= link_to t("edit"), edit_investor_stock_investment_path(@investor, stock_investment) %></td>
        <td>
          <%= 
            link_to(
              t("delete"), 
              investor_stock_investment_path(@investor, stock_investment), 
              method: :delete, 
              data: { confirm: t("delete_confirmation") }
            )
          %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

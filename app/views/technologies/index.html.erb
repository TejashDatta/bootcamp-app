<h1>技術</h1>
<p>
  <%= link_to "新技術", new_technology_path %>
</p>

<table>
  <thead>
    <tr>
      <th>名前</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @technologies.each do |technology| %>
      <tr>
        <td><%= technology.name %></td>
        <td><%= link_to "表示", technology %></td>
        <td><%= link_to "編集", edit_technology_path(technology) %></td>
        <td><%= link_to "削除", technology, method: :delete, data: { confirm: "削除は宜しいですか?" } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

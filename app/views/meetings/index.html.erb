<h1>会議</h1>
<p>
  <%= link_to "会議作成", new_meeting_path %>
</p>

<table>
  <thead>
    <tr>
      <th>名前</th>
      <th>内容</th>
      <th>開始時間</th>
      <th>終了時間</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @meetings.each do |meeting| %>
      <tr>
        <td><%= meeting.name %></td>
        <td><%= truncate meeting.description %></td>
        <td><%= meeting.start_at %></td>
        <td><%= meeting.end_at %></td>
        <td><%= link_to "表示", meeting %></td>
        <td><%= link_to "編集", edit_meeting_path(meeting) %></td>
        <td><%= link_to "削除", meeting, method: :delete, data: { confirm: "削除は宜しいですか?" } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
